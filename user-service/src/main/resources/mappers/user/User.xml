<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ohgiraffers.userservice.user.query.mapper.UserMapper">

    <select id="selectUserByUserId" resultType="com.ohgiraffers.userservice.user.query.dto.response.UserDTO">
        SELECT
            user_no,
            user_id,
            user_pwd,
            user_nickname,
            user_email,
            user_phonenum,
            user_birthdate,
            user_registered_at,
            user_is_notice_active,
            role
        FROM user
        WHERE user_id = #{userId}
    </select>


</mapper>